<!-- Header to be imported in -->
 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
 </head>
 <body>
    <h1 class="register-header">Register</h1>
    <form action="/user/register" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="email" placeholder="Enter email address">
    <input type="text" name="fullname" placeholder="Enter full name">
    <input type="text" name="username" placeholder="Enter username">
    
    <input type="file" id="profilePicture" accept="image/*">
    <input type="hidden" name="imageBase64" id="imageBase64">

    <input type="password" name="password" placeholder="Enter password">
    <input type="password" name="confirm_password" placeholder="Re-enter password">

    <input type="submit" value="submit">
   </form>

   <% if (msg && code) { %>
   <div class="error_message"> <%= `${msg}`%></div>

      <% } %>

   <script src="/js/script.js"></script>
 </body>
 </html>